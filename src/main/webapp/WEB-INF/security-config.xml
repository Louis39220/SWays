<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
">
    
    <security:http auto-config="true">
        <intercept-url pattern="/users/add.html" access="ROLE_USER" />
        <security:session-management session-fixation-protection="none" />
        <security:form-login login-page="/pages/public/login.xhtml" default-target-url="/resources/home.xhtml"/>
    </security:http>
  

    <security:authentication-manager>
        <security:authentication-provider user-service-ref="userService">
            <security:user name="test" password="test" authorities="ROLE_USER" />
        </security:authentication-provider>
    </security:authentication-manager>

</beans>
